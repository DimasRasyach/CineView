<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CineView" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorSecondaryContainer">#D4AF37</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">#1C1C1E</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.CineView" parent="Base.Theme.CineView" />

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">9dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonOutlinedStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">9dp</item>
        <item name="strokeColor">#E6E6E6</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="ButtonStyleAccount" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">9dp</item>
        <item name="backgroundTint">#1C1C1E</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#D4AF37</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>